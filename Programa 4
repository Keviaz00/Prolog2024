using System;

public class VerificarPar
{
    // Verifica si un número es par
    public static bool EsPar(int numero)
    {
        return numero % 2 == 0; // Retorna verdadero si el número es divisible por 2
    }

    // Ejemplo de uso
    public static void Main()
    {
        int numero = 10; // Número a verificar
        if (EsPar(numero))
        {
            Console.WriteLine($"{numero} es un número par."); // Imprime: 10 es un número par.
        }
        else
        {
            Console.WriteLine($"{numero} es un número impar.");
        }
    }
}
